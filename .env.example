# Environment Configuration Template
# Copy this file to .env and update with your actual values

# Application Settings
VITE_APP_TITLE="CDA Street & Property Registry"
VITE_APP_VERSION="1.0.0"
VITE_NODE_ENV="development"

# API Configuration
VITE_API_BASE_URL="https://api.cda-registry.com"
VITE_API_TIMEOUT=10000
VITE_ENABLE_API_LOGGING=false

# Authentication
VITE_AUTH_PROVIDER="local"
VITE_SESSION_TIMEOUT=3600000
VITE_TOKEN_REFRESH_THRESHOLD=300000

# Security Settings
VITE_ENABLE_CSP=true
VITE_ENABLE_HTTPS_REDIRECT=true
VITE_ALLOWED_ORIGINS="https://cda-registry.com,https://admin.cda-registry.com"

# Analytics and Monitoring
VITE_ENABLE_ANALYTICS=false
VITE_ANALYTICS_ID=""
VITE_ERROR_REPORTING_DSN=""

# Feature Flags
VITE_ENABLE_ADVANCED_SEARCH=true
VITE_ENABLE_EXPORT_FEATURES=true
VITE_ENABLE_PRINT_FEATURES=true
VITE_MAX_FILE_UPLOAD_SIZE=10485760

# Database Configuration (if using client-side storage)
VITE_DB_NAME="cda_registry"
VITE_DB_VERSION=1

# External Services
VITE_MAPS_API_KEY=""
VITE_GEOCODING_ENABLED=false

# Development Settings
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_MOCK_DATA=true
VITE_MOCK_API_DELAY=500

# Performance Settings
VITE_ENABLE_SERVICE_WORKER=false
VITE_ENABLE_PWA=false
VITE_CACHE_TTL=3600000

# Localization
VITE_DEFAULT_LANGUAGE="en"
VITE_SUPPORTED_LANGUAGES="en,fr,es,pt"
VITE_TIMEZONE="Africa/Lagos"

# Email Configuration (for notifications)
VITE_EMAIL_PROVIDER=""
VITE_FROM_EMAIL="noreply@cda-registry.com"
VITE_EMAIL_TEMPLATES_ENABLED=false

# File Storage
VITE_MAX_STREET_IMAGES=5
VITE_ALLOWED_IMAGE_TYPES="image/jpeg,image/png,image/webp"
VITE_IMAGE_QUALITY=0.8

# Pagination Settings
VITE_DEFAULT_PAGE_SIZE=12
VITE_MAX_PAGE_SIZE=50
VITE_STREETS_PER_CDA=15

# UI/UX Settings
VITE_THEME="system"
VITE_ANIMATIONS_ENABLED=true
VITE_TOAST_DURATION=5000
VITE_DEBOUNCE_DELAY=300

# Backup and Export
VITE_AUTO_BACKUP_ENABLED=false
VITE_BACKUP_FREQUENCY=86400000
VITE_EXPORT_FORMATS="pdf,csv,xlsx"

# Compliance Settings
VITE_GDPR_COMPLIANT=true
VITE_DATA_RETENTION_DAYS=2555
VITE_AUDIT_LOG_ENABLED=true

# Rate Limiting
VITE_RATE_LIMIT_REQUESTS=100
VITE_RATE_LIMIT_WINDOW=900000

# Third-party Integrations
VITE_ENABLE_SLACK_NOTIFICATIONS=false
VITE_SLACK_WEBHOOK_URL=""
VITE_ENABLE_TELEGRAM_BOT=false
VITE_TELEGRAM_BOT_TOKEN=""

# Custom Styling
VITE_PRIMARY_COLOR="#1f2937"
VITE_ACCENT_COLOR="#3b82f6"
VITE_BRAND_LOGO_URL="/logo.png"

# Maintenance Mode
VITE_MAINTENANCE_MODE=false
VITE_MAINTENANCE_MESSAGE="System is under maintenance. Please check back later."
